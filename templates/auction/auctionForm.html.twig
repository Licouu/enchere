{% extends 'base.html.twig' %}

{% block title %}Offer{% endblock %}
{% block head %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/creer_enchere.css') }}" media="screen">
        <link rel="preconnect" href="{{ asset('https://fonts.googleapis.com') }}">
        <link rel="preconnect" href="{{ asset('https://fonts.gstatic.com') }}" crossorigin>
        <link href="{{ asset('https://fonts.googleapis.com/css2?family=Acme&display=swap') }}" rel="stylesheet">
        <link href="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css') }}" rel="stylesheet"       integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css') }}">
    {% endblock %}
{% endblock %}


{% block body %}
{% include "header.html.twig" %}

    <main>

 
   <h2>Creating an auction</h2>

      {{form_start(auctionForm)}}
   
    <div class="step" id="step_beat">
      <label for="starting-price">Enter your title</label>
      {{form_widget(auctionForm.name, {'attr':{'id': "titre", 'type': "text"}})}}
      {{ form_errors(auctionForm.name, {'attr':{'class':'msg_error'}})}}
      <p class="note"></p>
    </div>

    <div class="step" >
      <label for="starting-price">Choice of categories</label>
      {{form_widget(auctionForm.categorie,{'attr':{'id': "cate"}})}}
      <p class="note"></p>
    </div>

    <div class="step" id="step_moods">
      <label for="starting-price">Choice of a mood</label>
      {{form_widget(auctionForm.mood,{'attr':{'id': "moods", 'name': "countries"}})}}
      <p class="note"></p>
    </div>

    <div class="step" id="depart">
          <label for="starting-price">Starting price</label>
          {{form_widget(auctionForm.minPrice, {'attr':{'id': "starting-price", 'type': "number"}})}}
          {{ form_errors(auctionForm.minPrice, {'attr':{'class':'msg_error'}})}}
          <p class="note"></p>
    </div>

    <div class="step" id="fin">
        <label for="end-date">End date</label>
        {{form_widget(auctionForm.endDate, {'attr':{'id': "end-date", 'type': "date", 'class':"datepicker-disable-past"}})}}
        {{ form_errors(auctionForm.endDate, {'attr':{'class':'msg_error'}})}}
        <p class="note"></p>
    </div>


    <div class="step" id="img">
      <label class="form-label" for="customFile">Upload your image</label>
      {{form_widget(auctionForm.imageFile, {'attr':{'id': 'customFile', 'type': 'file', 'class':'form-control', 'accept':'.jpeg, .png', 'max-size':'15mb'}})}}
      {{ form_errors(auctionForm.imageFile, {'attr':{'class':'msg_error'}})}}
      <p class="note">Warning : .jpeg, .png Taille max: 8mb</p>
    </div>


    <div class="step" id="wav">
      <label class="form-label" for="customFile">Upload your beat</label>
      {{form_widget(auctionForm.musicFile, {'attr': {'id': "customFile", 'type': "file", 'class': "form-control", 'accept': ".wav", 'max-size': "15mb"}})}}
      {{ form_errors(auctionForm.musicFile, {'attr':{'class':'msg_error'}})}}
      <p class="note">Warning : .wav Taille max: 100mb</p>
    </div>

                                  
    <div class="step">
      <button class="btn btn-primary" type="submit">Save changes</button>
    </div>
        
      {{form_end(auctionForm)}}

    <!--Partie Script-->
    
    {% include "footer.html.twig" %}
    </main>
    {% endblock %}
    {% block script %}
    <script src="js/date.js"></script>
    <script src="js/notifications.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  {% endblock %}
